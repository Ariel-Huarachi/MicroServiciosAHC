<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Lista de Usuarios</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <h1>Usuarios</h1>
  <a href="/add">➕ Agregar Usuario</a>
  <table>
    <tr>
      <th>ID</th><th>Nombre</th><th>Correo</th><th>Fecha</th><th>Acciones</th>
    </tr>
    <% usuarios.forEach(u => { %>
      <tr>
        <td><%= u.id %></td>
        <td><%= u.nombre %></td>
        <td><%= u.correo %></td>
        <td><%= u.fecha_registro.toISOString().slice(0,10) %></td>
        <td><a href="/delete/<%= u.id %>">❌ Eliminar</a></td>
      </tr>
    <% }) %>
  </table>
</body>
</html>
